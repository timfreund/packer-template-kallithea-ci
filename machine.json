{
    "variables": {
        "iso": "http://releases.ubuntu.com/14.04/ubuntu-14.04-server-amd64.iso",
        "checksum": "01545fa976c8367b4f0d59169ac4866c",
        "version-number": "14.04",
        "version-name": "trusty",

        "username": "packer",
        "password": "packer",
        "publickey": "test"
    },
    "builders": [
        {
            "type": "docker",
            "image": "ubuntu:{{user `version-number` }}",
            "export_path": "output/kallithea-jenkins-docker.tar",
            "run_command": ["run", "-d", "-i", "-t", "-privileged=true", "-v", "{{.Volumes}}", "{{.Image}}", "/bin/bash"]
        },
        {
            "type": "virtualbox-iso",
            "guest_os_type": "Ubuntu_64",
            "iso_url": "{{user `iso` }}",
            "iso_checksum": "{{ user `checksum` }}",
            "iso_checksum_type": "md5",
            "output_directory": "output/kallithea-jenkins-vbox",
            "http_directory": "httpdir",
            "http_port_min": 10082,
            "http_port_max": 10089,
            "ssh_host_port_min": 2222,
            "ssh_host_port_max": 2229,
            "ssh_username": "{{user `username`}}",
            "ssh_password": "{{user `password`}}",
            "ssh_wait_timeout": "90m",
            "shutdown_command": "sudo shutdown -P now",
            "boot_command":
            [
                "<esc><esc><enter><wait>",
                "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "hostname=example ",
                "fb=false debconf/frontend=noninteractive ",
                "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false ",
                "initrd=/install/initrd.gz -- <enter>"
            ]
        },
        {
            "type": "qemu",
            "iso_url": "{{user `iso` }}",
            "iso_checksum": "{{user `checksum` }}",
            "iso_checksum_type": "md5",
            "output_directory": "output/kallithea-jenkins-kvm",
            "ssh_wait_timeout": "30s",
            "shutdown_command": "sudo shutdown -P now",
            "disk_size": 12000,
            "format": "qcow2",
            "headless": true,
            "accelerator": "kvm",
            "http_directory": "httpdir",
            "http_port_min": 10082,
            "http_port_max": 10089,
            "ssh_host_port_min": 2222,
            "ssh_host_port_max": 2229,
            "ssh_username": "{{user `username`}}",
            "ssh_password": "{{user `password`}}",
            "ssh_port": 22,
            "ssh_wait_timeout": "90m",
            "vm_name": "kallithea-jenkins",
            "net_device": "virtio-net",
            "disk_interface": "virtio",
            "boot_command":
            [
                "<esc><esc><enter><wait>",
                "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "hostname=example ",
                "fb=false debconf/frontend=noninteractive ",
                "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false ",
                "initrd=/install/initrd.gz -- <enter>"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "puppet.sh",
            "execute_command": "echo 'packer' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
            "environment_vars":
            [
                "version={{user `version-name`}}"
            ]
        },
        {
            "type": "puppet-masterless",
            "manifest_file": "site.pp",
            "module_paths":
            [
                "./modules"
            ]
        }
    ]
}
